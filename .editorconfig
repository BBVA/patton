# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 119

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab
indent_size = 8
